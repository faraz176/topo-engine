{
  "name": "TopoDrawer IOS-like CLI Test Suite (sim-compatible)",
  "version": 1,
  "notes": [
    "EXEC-only: show/ping/traceroute. Use do <exec> in config modes.",
    "Supports IOS shortnames: int g0/0, no shut, sh ip int brief."
  ],
  "scenarios": [
    {
      "id": "cli-grammar",
      "title": "CLI grammar sanity",
      "devices": {
        "R1": [
          "en",
          "conf t",
          "do sh ip int brief",
          "exit",
          "sh ip int brief"
        ]
      }
    },
    {
      "id": "l3-static",
      "title": "L3 basics + static routing (R1 ↔ R2)",
      "devices": {
        "R1": [
          "en",
          "conf t",
          "int g0/0",
          "ip address 10.0.0.1 255.255.255.252",
          "no shut",
          "end",
          "ping 10.0.0.2",
          "traceroute 10.0.0.2",
          "sh ip route"
        ],
        "R2": [
          "en",
          "conf t",
          "int g0/0",
          "ip address 10.0.0.2 255.255.255.252",
          "no shut",
          "end",
          "sh ip int brief"
        ]
      }
    },
    {
      "id": "l2-vlan-mac",
      "title": "VLAN access + MAC learning (R1—SW1—R2)",
      "devices": {
        "SW1": [
          "en",
          "conf t",
          "vlan 10",
          "name USERS",
          "exit",
          "int f0/1",
          "switchport mode access",
          "switchport access vlan 10",
          "no shut",
          "exit",
          "int f0/2",
          "switchport mode access",
          "switchport access vlan 10",
          "no shut",
          "end",
          "sh vlan brief",
          "sh mac address-table"
        ],
        "R1": [
          "en",
          "conf t",
          "int g0/0",
          "switchport mode access",
          "switchport access vlan 10",
          "ip address 192.168.10.1 255.255.255.0",
          "no shut",
          "end",
          "ping 192.168.10.2"
        ],
        "R2": [
          "en",
          "conf t",
          "int g0/0",
          "switchport mode access",
          "switchport access vlan 10",
          "ip address 192.168.10.2 255.255.255.0",
          "no shut",
          "end"
        ]
      }
    }
  ]
}
